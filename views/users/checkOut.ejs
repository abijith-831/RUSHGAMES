<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('orderForm');
        if (form) {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                const selectedAddress = document.querySelector('input[name="address"]:checked');
                const selectedPaymentMethod = document.querySelector('.card-title a[aria-expanded="true"]');
                if (selectedAddress && selectedPaymentMethod) {
                    const addressValue = selectedAddress.value;
                    const paymentMethod = selectedPaymentMethod.textContent.trim();
                    sendDataToBackend(addressValue, paymentMethod);
                } else {
                    console.error('No address or payment method selected');
                }
            });
        }
    });

    function sendDataToBackend(address, paymentMethod) {
        fetch('/placeOrder', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ selectedAddress: address, selectedPaymentMethod: paymentMethod }),
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('Failed to place order');
            }
        })
        .then(data => {
            // Display success message
            swal("Success!", "Your order has been placed successfully!", "success");
            console.log(data); // You can handle the response data here if needed
        })
        .catch((error) => {
            // Display error message
            swal("Error!", "Failed to place your order. Please try again later.", "error");
            console.error('Error:', error);
        });
    }
</script>


