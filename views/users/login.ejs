<style>
    .text-red {
        color: red;
    }
    .small-text {
        font-size: 12px; /* Adjust the font size as needed */
    }

    .password-wrapper {
        position: relative;
    }
    .form-control {
    border: 1px solid #000;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 20px;
}
    .password-icon {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
