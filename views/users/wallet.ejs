            <% if (rev) { %>

              <% rev.forEach ((item , index) => { %> 
                <tr>
                  <th scope="row"><%= index+1 %></th>
                  <% if (item.transactionType === 'debit') { %>
                    <td>- ₹<%= Math.floor(item.amount) %></td>
                  <%  }else { %>
                    <td> ₹<%= Math.floor(item.amount) %></td>
                  <%  }  %>
                  
