                  <td><%= item.method %></td>
                  <% if (item.transactionType === 'debit') { %>
                    <td style="color: red;"><%= item.transactionType %></td>
                  <%  }else { %>
                    <td style="color: green;"><%= item.transactionType %></td>
                  <%  }  %>
                  
                  <td>₹ <%=Math.floor(item.currBalance) %></td>
