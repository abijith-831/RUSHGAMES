                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">All Games</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= game.name %></li>
