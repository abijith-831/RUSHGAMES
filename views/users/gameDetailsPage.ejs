<!-- ADDING TO WISHLIST -->
<script>
	function addToWishlist(gameId){
        
		fetch(`/addToWishlist?gameId=${gameId}`,{method : 'POST'})
		.then(response=> response.json())
		.then(data=>{
			if(data.success){
				Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Game added to Wishlist successfully.',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.reload();
                    });
			}else{
				Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.error || 'Failed to add game to cart.',
                        showConfirmButton: false,
                        timer: 1500
                    });
			}
		})
		.catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'login first to Add game to Wishlist',
                    showConfirmButton: false,
                    timer: 1500
                });
            });
	}
</script>



<!-- ADDING TO CART -->
<script>
    function addToCart(gameId , quantity) {

        fetch(`/addToCart?gameId=${gameId}&quantity=${quantity}`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Game added to cart successfully.',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.reload();
                    });
                }else if(data.message === 'nouser'){
                    window.location.href = '/login'
                }
                 else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.error || 'Failed to add game to cart.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            })
            .catch(error => {
              
                console.error('Error:', error);
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'login first to Add game to Cart',
                    showConfirmButton: false,
                    timer: 1500
                });
            });
    }
</script>


         
