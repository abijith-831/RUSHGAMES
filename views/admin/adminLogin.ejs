<body>
    <style>
        .text-red {
            color: red;
        }
        .small-text {
            font-size: 12px; /* Adjust the font size as needed */
        }
    
        .password-wrapper {
            position: relative;
        }
        .form-control {
        border: 1px solid #000;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
    }
        .password-icon {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }
    
        .password-rules {
            display: none;
            margin-top: 5px;
            font-size: 12px;
            color: #999;
        }
        .button-container {
        text-align: center;
    }
    
    .btn-outline-primary-2 {
        border: 1px solid black; /* Black border */
        color: rgb(250, 245, 245); /* Black text */
        background-color: transparent; /* Transparent background */
    }
    
    .btn-outline-primary-2:hover {
        background-color: rgb(245, 243, 243); /* Change background color on hover */
        color: rgb(3, 3, 3); /* Change text color on hover */
    }
    .forgot-link {
        color: black !important; /* Change link color to black */
    }
    .login-page {
    min-height: 100vh; /* Set minimum height to cover the entire viewport */
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 8%;
    padding-bottom: 8%;
}
.transparent-box {
    background-color: rgba(255, 255, 255, 0.5); /* Half-transparent white background */
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Optional: Add a shadow effect */
}
.logo-name {
    color: #000;
    font-weight: bold;
}
    
    </style>
       


    <div class="page-wrapper">
        <main class="main">
    
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/admin/assets/images/background/login-bg.jpg')">
                <div class="container">
                    <div class="transparent-box">
                    <div class="form-box">
                        <div class="form-tab">
                            <div class="text-center">
                                <img src="/assets/images/logo.png" alt="RUSH GAMES LOGO" width="150px" height="150px" style="display: block; margin: 0 auto;">
                                <h2 class="logo-name">RUSH GAMES</h2>
                            </div>
                            
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                                    
                                            <form method="post" action="/admin/loginSubmit" onsubmit="return validateForm()">
                                            
            
                                                <div class="form-group">
                                                    <label for="register-email">Your Email Address *</label>
                                                    <input type="text" class="form-control" id="register-email" name="adminEmail">
                                                </div><!-- End .form-group -->                                                                                                                       
                                                <div class="form-group">
                                                    <label for="register-password">Enter Your Password *</label>
                                                    <div class="password-wrapper">
                                                        <input type="password" class="form-control" id="register-password" name="adminPassword">
                                                    </div>                                             
                                                </div>
                                                <br><br>                                                                                                    
                                                <div class="form-footer">
                                                    <% if (error && error.length >0) { %>
                                                        <div class="alert alert-danger" role="alert">
                                                            <%= error %>
                                                        </div>
                                                
                                                    <%   }  %>
                                                    
                                                    <!-- Top button container -->
                                                    <div class="button-container">
                                                        <button type="submit" class="btn btn-outline-primary-2">
                                                            <span>SIGN IN</span>
                                                            <i class="icon-long-arrow-right"></i>
                                                        </button>
                                                        
                                                    </div>
                                                    <br><br>                                                                                                                                                  
                                                </div><!-- End .form-footer -->                                             
                                            </form>
                                        </div>                                 
                                </div><!-- .End .tab-pane -->
                            </div><!-- End .tab-content -->
                        </div><!-- End .form-tab -->
                    </div><!-- End .form-box -->
                </div><!-- End .container -->
            </div><!-- End .login-page section-bg -->
        </main><!-- End .main -->
    </div><!-- End .page-wrapper -->

